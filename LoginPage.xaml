<Page x:Class="mss_app.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:mss_app"
      mc:Ignorable="d" 
      d:DesignHeight="568" d:DesignWidth="1000"
      Title="LoginPage">

    <Grid>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="El. paštas" FontSize="20" />
            <TextBox  Width="220" FontSize="20" />
            <Label Content="Slaptažodis" FontSize="20" />
            <PasswordBox  Width="220" FontSize="20" />
            <Button Content="Prisijungti" FontSize="20" Margin="0 10 0 0" />
        </StackPanel>
    </Grid>
</Page>
